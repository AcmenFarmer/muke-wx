<view hidden="{{hidden}}" class="classic-container">
  <image class="classic-img {{palying ? 'rotation' : ''}}" src="{{img}}"/>
  <image bind:tap="onPlay" 
    class="player-img" 
    src="{{palying ? pauseSrc : playSrc}}"/>
  <image class="tag" src="./images/music@tag.png"/>
  <text class="content">{{content}}</text>
</view>
